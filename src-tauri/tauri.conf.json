{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Horizon",
    "version": "0.0.1"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "Music",
      "copyright": "Lofu Studio",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.lofustudio.horizon",
      "targets": "all",
      "longDescription": "Horizon is a stupidly simple music app that allows you to sync your library between devices. Seamless, secure, speedy."
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Horizon",
        "width": 800,
        "height": 600,
        "decorations": false,
        "center": true
      }
    ]
  }
}